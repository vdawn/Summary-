
<!--pages/sim-go/demo/id.wxml-->
<view class="weui-article">
  <view class="weui-article__h1">{{blog.title}}</view>
  <view class="weui-article__p">
    时间：{{blog.created}}
  </view>
  <view class="weui-article__section">
    <view class="weui-article__section">
      <view class="weui-article__p">
       {{blog.content}}
      </view>
    </view>
  </view>
  <view class="weui-article__p">
    <image src="{{my.avatarUrl}}" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
    {{my.nickname}}
  </view>
</view>